#!/usr/bin/env ruby

require 'optparse'
require 'ostruct'

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'code_generator'
require 'parser'

options = OpenStruct.new
options.input = '../include/TrustWalletCore'
options.output = '../'
options.swift = true
options.java = true
options.jni_h = true
options.jni_c = true

OptionParser.new do |opts|
  opts.banner = 'Usage: codegen [options]'

  opts.on('-i', '--input FOLDER', "Input folder with C headers. Default: #{options.input}") do |v|
    options.swift = v
  end
  opts.on('-o', '--output FOLDER', "Output folder. Default: #{options.output}") do |v|
    options.swift = v
  end
  opts.on('-s', '--swift', "Generate Swift code. Default: #{options.swift}") do |v|
    options.swift = v
  end
  opts.on('-j', '--java', "Generate Java code. Default: #{options.java}") do |v|
    options.java = v
  end
  opts.on('-d', '--jnih', "Generate JNI header. Default: #{options.jni_h}") do |v|
    options.jni_h = v
  end
  opts.on('-c', '--jnic', "Generate JNI code. Default: #{options.jni_c}") do |v|
    options.jni_c = v
  end
  opts.on_tail('-h', '--help', 'Show this message') do
    puts opts
    exit
  end
end.parse!

Dir.foreach(options.input) do |item|
  next if ['.', '..'].include?(item)

  entities = Parser.new(path: File.expand_path(File.join(options.input, item))).parse
  if entities.empty?
    STDERR.puts "Failed to parse #{item}"
    next
  end

  output_file = File.basename(item, '.h').sub(/^TW/, '')
  generator = CodeGenerator.new(entities: entities, file: output_file)
  if options.swift
    code = generator.render_swift
    path = File.expand_path(File.join(options.output, 'swift/Sources', "#{output_file}.swift"))
    File.write(path, code)
  end
  if options.java
    code = generator.render_java
    path = File.expand_path(File.join(options.output, 'jni/java/com/wallet/crypto/trustapp/jni', "#{output_file}.java"))
    File.write(path, code)
  end
  if options.jni_h
    code = generator.render_jni_h
    unless code.empty?
      path = File.expand_path(File.join(options.output, 'jni/cpp', "#{output_file}.h"))
      File.write(path, code)
    end
  end
  if options.jni_c
    code = generator.render_jni_c
    unless code.empty?
      path = File.expand_path(File.join(options.output, 'jni/cpp', "#{output_file}.c"))
      File.write(path, code)
    end
  end
end
